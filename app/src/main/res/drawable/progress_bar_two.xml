<!-- progress_bar_two.xml (in res/drawable folder) -->
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:toDegrees="360"
    android:pivotX="50%"
    android:pivotY="50%">

    <shape android:shape="ring">
        <solid android:color="@color/slate_900" /> <!-- Background Color -->
        <size
            android:width="8dp"
            android:height="8dp" />
    </shape>

</rotate>
