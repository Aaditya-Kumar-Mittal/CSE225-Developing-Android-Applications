<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_38"
    tools:context=".ClassDemoOneProgressBarThreeUserInput">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/transparent_dark_green"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress Bar Horizontal"
            android:textColor="@color/lime_50"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBarThree1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="264dp"
            android:layout_height="32dp"
            android:layout_marginVertical="10dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressBackgroundTint="@color/slate_900"
            android:progressTint="@color/lime_50" />

        <ProgressBar
            android:id="@+id/progressBarThree2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minHeight="50dp"
            android:indeterminate="true"
            android:progressDrawable="@drawable/progress_bar_two" /> <!-- Circular progress drawable -->

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="0 / 100"
            android:textColor="@color/slate_50"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnShowThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/slate_900"
            android:text="@string/start_progress"
            android:textColor="@color/lime_400"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnResetThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/slate_900"
            android:text="@string/reset_progress"
            android:textColor="@color/lime_400"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/userInput1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/lime_400"
            android:textStyle="bold"
            android:backgroundTint="@color/lime_400" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
