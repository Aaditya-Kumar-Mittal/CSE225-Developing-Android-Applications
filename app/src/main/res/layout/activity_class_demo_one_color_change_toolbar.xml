<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/changeBackgroundColorToolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClassDemoOneColorChangeToolbar">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/slate_900"
        android:minHeight="125dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/blueColorBtn1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/blue_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/greenColorBtn1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/green_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/yellowColorBtn1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/yellow_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/violetColorBtn1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/violet_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/pinkColorBtn1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/pink_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/limeColorBtn1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/lime_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/orangeColorBtn1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/orange_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/fuchsiaColorBtn1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/fuchsia_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/skyColorBtn1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/sky_500"
                    app:cardCornerRadius="50dp" />
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.appcompat.widget.Toolbar>

</LinearLayout>