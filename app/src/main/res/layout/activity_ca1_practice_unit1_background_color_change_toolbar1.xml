<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundColorChangeToolbar2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CA1PracticeUnit1BackgroundColorChangeToolbar1">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:background="@color/slate_900">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/violetColorBtn2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/violet_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/indigoColorBtn2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/indigo_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/blueColorBtn2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/blue_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/greenColorBtn2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/green_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/yellowColorBtn2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/yellow_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/orangeColorBtn2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/orange_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/redColorBtn2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/red_500"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/pinkColorBtn2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/pink_500"
                    app:cardCornerRadius="50dp" />


            </LinearLayout>


        </HorizontalScrollView>

    </androidx.appcompat.widget.Toolbar>


</LinearLayout>