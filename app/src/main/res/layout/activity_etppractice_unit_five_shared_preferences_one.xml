<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/indigo_200"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ETPPracticeUnitFiveSharedPreferencesOne">

    <EditText
        android:id="@+id/etpSharedPreferencesEmail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@color/yellow_100"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textAlignment="center"
        android:textColor="@color/slate_900" />

    <EditText
        android:id="@+id/etpSharedPreferencesPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@color/yellow_100"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textAlignment="center"
        android:textColor="@color/slate_900" />

    <Button
        android:id="@+id/etpSharedPreferencesSaveButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/green_500"
        android:text="Save Data" />

    <Button
        android:id="@+id/etpSharedPreferencesReturnButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/yellow_500"
        android:text="Retrieve Data" />

    <Button
        android:id="@+id/etpSharedPreferencesClearButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/red_500"
        android:text="Clear Data" />

</LinearLayout>