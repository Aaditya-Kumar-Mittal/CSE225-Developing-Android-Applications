<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ETPPracticeUnitFiveSharedPreferencesTwo">

    <TextView
        android:id="@+id/etpSharedPreferencesText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Text Will Appear Here"
        android:textColor="@color/slate_900"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etpSharedPreferencesText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/red_100"
        android:hint="Enter Text Here"
        android:padding="15dp" />

    <Button
        android:id="@+id/etpSharedPreferencesApplyButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Apply" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/etpSharedPreferencesSwitch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/etpSharedPreferencesSaveButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Save" />


</LinearLayout>