<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ETPPracticeUnitThreeTimePickerOne">

    <TimePicker
        android:id="@+id/etpTimePicker1"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_margin="25dp"
        android:background="@color/yellow_100"
        android:numbersTextColor="@color/slate_900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/etpTimePickerText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time is: "
        android:textColor="@color/slate_900"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etpTimePicker1" />

</androidx.constraintlayout.widget.ConstraintLayout>