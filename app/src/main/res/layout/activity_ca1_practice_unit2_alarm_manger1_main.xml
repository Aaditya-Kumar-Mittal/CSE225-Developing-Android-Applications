<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_900"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".CA1PracticeUnit2AlarmManger1Main">

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Alarm Manger Application of Pending Intent Demo"
        android:textAlignment="center"
        android:textColor="@color/slate_50"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/alarmTimeValue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:background="@color/sky_200"
        android:ems="10"
        android:hint="Enter alarm value"
        android:inputType="text"
        android:padding="15dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/slate_900" />

    <Button
        android:id="@+id/alarmStartBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red_500"
        android:text="Start Alarm" />

    <Button
        android:id="@+id/alarmRepeatBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:backgroundTint="@color/orange_500"
        android:text="Repeat Alarm" />

    <Button
        android:id="@+id/alarmCancelBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_500"
        android:text="Cancel Alarm" />
</LinearLayout>