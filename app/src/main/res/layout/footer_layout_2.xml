<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/footerLayout2"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="15dp"
    android:backgroundTint="@color/slate_900">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/violetColorBtn3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/violet_500"
                app:cardCornerRadius="50dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/indigoColorBtn3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/indigo_500"
                app:cardCornerRadius="50dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/blueColorBtn3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/blue_500"
                app:cardCornerRadius="50dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/greenColorBtn3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/green_500"
                app:cardCornerRadius="50dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/yellowColorBtn3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/yellow_500"
                app:cardCornerRadius="50dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/orangeColorBtn3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/orange_500"
                app:cardCornerRadius="50dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/redColorBtn3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/red_500"
                app:cardCornerRadius="50dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/pinkColorBtn3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/pink_500"
                app:cardCornerRadius="50dp" />
        </LinearLayout>
    </HorizontalScrollView>

</androidx.cardview.widget.CardView>