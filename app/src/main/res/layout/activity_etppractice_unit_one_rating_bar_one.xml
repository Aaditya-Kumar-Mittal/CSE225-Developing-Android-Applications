<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@color/teal_200"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ETPPracticeUnitOneRatingBarOne">

    <TextView
        android:id="@+id/etpRatingText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="25sp"
        android:textColor="@color/slate_900"
        />

    <RatingBar
        android:id="@+id/etpRating1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:progressBackgroundTint="@color/colorWhite"
        android:progressTint="@color/yellow_400"
        android:rating="1"
        android:scaleX="1"
        android:scaleY="1"
        android:stepSize="1" />

    <RatingBar
        android:id="@+id/etpRating2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:progressBackgroundTint="@color/colorWhite"
        android:progressTint="@color/yellow_400"
        android:rating="1"
        android:scaleX="1"
        android:scaleY="1"
        android:stepSize="1" />

    <Button
        android:id="@+id/etpRatingButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Us"/>


</LinearLayout>