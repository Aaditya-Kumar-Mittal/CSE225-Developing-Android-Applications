<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ETPPracticeUnitThreeDateTimePickerOne">

    <EditText
        android:id="@+id/etpInputDate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@color/orange_100"
        android:hint="Enter Date"
        android:padding="15dp"
        android:textColor="@color/slate_900"
        android:textSize="25sp" />

    <Button
        android:id="@+id/etpDateButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Button" />

    <EditText
        android:id="@+id/etpInputTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@color/orange_100"
        android:hint="Enter Time"
        android:padding="15dp"
        android:textColor="@color/slate_900"
        android:textSize="25sp" />

    <Button
        android:id="@+id/etpTimeButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Button" />

</LinearLayout>