<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_200"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".CA1PracticeUnit1ProgressBar1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Progress Bar Horizontal"
        android:textColor="@color/slate_900"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar51"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginVertical="10dp"
        android:max="100"
        android:progress="0"
        android:progressBackgroundTint="@color/slate_900"
        android:progressTint="@color/slate_900" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Progress Bar Circular"
        android:textColor="@color/slate_900"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar52"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginVertical="10dp"
        android:background="@color/blue_100"
        android:indeterminate="false"
        android:progressBackgroundTint="@color/red_500"
        android:progressTint="@color/red_500" />

    <Button
        android:id="@+id/startProgressBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/slate_900"
        android:text="Start Progress"
        android:textSize="20sp" />

    <Button
        android:id="@+id/resetProgressButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/slate_900"
        android:text="Reset Progres"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:padding="5dp"
        android:text="Take Input for Progress"
        android:textColor="@color/slate_900"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/progressValue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:text="0/100"
        android:textColor="@color/slate_900"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/progressInput1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/slate_900"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/slate_50"
        android:textSize="25sp" />


</LinearLayout>